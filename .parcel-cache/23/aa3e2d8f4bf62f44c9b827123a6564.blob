@import url("https://fonts.googleapis.com/css2?family=Karla:wght@300;400;700&display=swap");
*,
*::after,
*::before {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  font-size: 62.5%;
}

body {
  font-family: "Karla", sans-serif;
  font-weight: 400;
  line-height: 1.7;
  box-sizing: border-box;
}