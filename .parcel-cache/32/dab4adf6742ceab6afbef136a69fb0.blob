.main .section__slider img {
  width: 100%;
  height: 100%;
  margin-top: 1rem;
  box-shadow: 0 11px 8px -6px #eaeaea;
}
.main .section__slider .images-area {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  overflow: hidden;
}
.main .section__slider .images-area img {
  width: 100%;
  transition: 0.3s cubic-bezier(0.79, 0.03, 0, 0.99);
}
.main .section__slider .buttons-area {
  width: 100%;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  display: flex;
  justify-content: space-between;
  overflow: hidden;
}
.main .section__slider .buttons-area > div {
  color: var(--white-c);
  background-color: var(--buttons-background-c);
  cursor: pointer;
  transition: 0.3s ease-in-out;
}
.main .section__slider .buttons-area > div:first-child {
  border-radius: 0 5px 5px 0;
  margin-left: -100px;
  background-color: #000;
  color: #fff;
  font-size: 1.6rem;
}
.main .section__slider .buttons-area > div:last-child {
  border-radius: 5px 0 0 5px;
  margin-right: -100px;
  background-color: #000;
  color: #fff;
  font-size: 1.6rem;
}
.main .section__slider .wrapper:hover .buttons-area > div:first-child {
  margin-left: 0;
}
.main .section__slider .wrapper:hover .buttons-area > div:last-child {
  margin-right: 0;
}
.main .section__slider .buttons-area div:hover:not(div.disabled) {
  background-color: #000;
}
.main .section__slider .buttons-area div:not(div.disabled):active {
  opacity: 0.7;
}
.main .section__slider .buttons-area > div.disabled {
  cursor: no-drop;
  opacity: 0.3;
}
.main .section__slider .buttons-area div i {
  font-size: 70px;
}
.main .section__slider .pagination-area {
  position: absolute;
  top: 90%;
  left: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
}
.main .section__slider .pagination-area span {
  display: inline-block;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: var(--white-c);
  margin-right: 5px;
  transform: scale(0.5);
  transition: 0.3s ease-in-out;
  opacity: 0.4;
}
.main .section__slider .pagination-area span.active {
  transform: scale(1);
  opacity: 1;
}
.main .section__main {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-template-rows: 1fr;
  grid-column-gap: 2rem;
  grid-row-gap: 2rem;
  box-shadow: 0 11px 8px -6px #eaeaea;
  padding: 2.5rem 0;
  margin: 2rem 0;
}
.main .section__main .col-left img {
  width: 70%;
}
.main .section__main .col-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.main .section__main .col-right h4 {
  font-size: 3rem;
}
.main .section__main .col-right p {
  font-size: 1.6rem;
  color: #000;
}
.main .section__main .col-right .btn-primary {
  margin-top: 2rem;
}
.main .section__main:last-child {
  box-shadow: none;
}
footer {
  background-color: #eaeaea;
  padding: 1.8rem 0;
}
footer .main p {
  font-size: 1.6rem;
  color: #000;
}
