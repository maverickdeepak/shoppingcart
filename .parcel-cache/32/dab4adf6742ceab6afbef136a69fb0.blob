}
header .main .menu_items_left ul li {
  padding: 0 1.5rem;
}
header .main .menu_items_left ul li a {
  font-size: 1.6rem;
  color: #787878;
  font-weight: 700;
}
header .main .menu_items_right ul {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 1rem;
}
header .main .menu_items_right ul li:not(:last-child) {
  padding: 0 1rem;
}
header .main .menu_items_right ul li a {
  color: #000;
}
header .main .menu_items_right .cart {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #eaeaea;
  padding: 0.5rem 2rem;
  font-size: 1.4rem;
